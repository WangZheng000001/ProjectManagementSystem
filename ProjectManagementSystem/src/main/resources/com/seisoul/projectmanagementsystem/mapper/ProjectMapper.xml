    <!--方法名:查询所有 返回值:Project对象 返回数据:tb_proj的全部行全部列-->
    <select id="selectAllProject" resultType="com.seisoul.projectmanagementsystem.pojo.Project">
        select * from tb_proj
    </select>

    <!--    &lt;!&ndash;方法名:通过成员id查询项目 返回值:Map 返回数据:指定成员id的项目&ndash;&gt;-->
